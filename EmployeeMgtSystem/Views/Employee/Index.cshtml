@model IEnumerable<tbl_Employee>
@{
    ViewData["Title"] = "Employees";
}

<div class="container mt-4">
    <h2>Employee Management</h2>
    <button class="btn btn-primary mb-3" id="btnAdd">Add Employee</button>

    <div id="employeeTable">
        @await Html.PartialAsync("_EmployeeTable", Model)
    </div>

    <!-- Modal -->
    <div class="modal fade" id="employeeModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Employee</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modalContent"></div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<script>
    $(function () {

        function initDatePicker() {
    $(".datepicker").datepicker({
        dateFormat: "yy-mm-dd",
        changeMonth: true,
        changeYear: true,
        maxDate: 0
    });
        }

        // Add Employee
        $("#btnAdd").click(function () {
            $.get("@Url.Action("Create", "Employee")", function (data) {
                $("#modalContent").html(data);
                $("#employeeModal").modal("show");
                initDatePicker();
                $("#modalContent").find("input[name='HireDate']").val("");
            });
        });

        // Edit Employee
        $(document).on("click", ".btn-edit", function () {
            let id = $(this).data("id");
            $.get("@Url.Action("Edit", "Employee")/" + id, function (data) {
                $("#modalContent").html(data);
                $("#employeeModal").modal("show");
                initDatePicker();
            });
        });

        // Delete Employee
        $(document).on("click", ".btn-delete", function () {
            let id = $(this).data("id");
            $.get("@Url.Action("Delete", "Employee")/" + id, function (data) {
                $("#modalContent").html(data);
                $("#employeeModal").modal("show");
            });
        });

        // Handle form submission
        $(document).on("submit", "form", function (e) {
            e.preventDefault();
            let form = $(this);
            $.ajax({
                url: form.attr("action"),
                type: form.attr("method"),
                data: form.serialize(),
                success: function (res) {
                    if (res.success) {
                        $("#employeeModal").modal("hide");
                        refreshTable();
                        toastr.success(res.message);
                    } else {
                        $("#modalContent").html(res);
                        initDatePicker();
                    }
                }
            });
        });

        function refreshTable() {
            $.get("@Url.Action("Index", "Employee")", function (data) {
                let html = $(data).find("#employeeTable").html();
                $("#employeeTable").html(html);
            });
        }
    });
</script>
